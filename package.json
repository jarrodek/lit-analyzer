{
  "name": "@jarrodek/lit-analyzer",
  "version": "3.0.5",
  "description": "CLI that type checks bindings in lit-html templates. Maintained by @jarrodek",
  "author": "runem",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "lit-analyzer": "dist/cli.js"
  },
  "files": [
    "/dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jarrodek/lit-analyzer.git"
  },
  "keywords": [
    "lit-html",
    "lit",
    "lit-element",
    "javascript",
    "typescript",
    "web components",
    "web",
    "components",
    "tagged",
    "template"
  ],
  "scripts": {
    "build": "wireit",
    "test": "node --import ts-node-maintained/register/esm --enable-source-maps bin/test.ts",
    "coverage": "c8 --reporter lcov --reporter text node --import ts-node-maintained/register/esm --enable-source-maps bin/test.ts",
    "lint": "wireit",
    "lint:eslint": "wireit",
    "lint:prettier": "wireit",
    "format": "wireit",
    "format:eslint": "wireit",
    "format:prettier": "wireit",
    "prepare": "husky"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty",
      "files": [
        "src/**/*",
        "tsconfig.json"
      ],
      "output": [
        "dist",
        ".tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "lint": {
      "dependencies": [
        "lint:eslint",
        "lint:prettier"
      ]
    },
    "lint:eslint": {
      "command": "eslint --color --cache --cache-location .eslintcache .",
      "files": [
        "src/**/*.ts",
        "eslint.config.js"
      ],
      "output": []
    },
    "lint:prettier": {
      "command": "prettier \"**/*.ts\" --check"
    },
    "format": {
      "dependencies": [
        "format:eslint",
        "format:prettier"
      ]
    },
    "format:eslint": {
      "command": "eslint --color --cache --fix --cache-location .eslintcache .",
      "files": [
        "src/**/*.ts",
        "eslint.config.js"
      ],
      "output": []
    },
    "format:prettier": {
      "command": "prettier \"**/*.ts\" --write"
    }
  },
  "dependencies": {
    "@jarrodek/web-component-analyzer": "^3.0.0",
    "@vscode/web-custom-data": "^0.6.0",
    "chalk": "^5.3.0",
    "didyoumean2": "^7.0.4",
    "fast-glob": "^3.3.0",
    "parse5": "^8.0.0",
    "ts-simple-type": "~2.0.0-next.0",
    "vscode-css-languageservice": "^6.3.0",
    "vscode-html-languageservice": "^5.3.0",
    "vscode-languageserver-types": "^3.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@japa/assert": "^4.0.1",
    "@japa/runner": "^4.2.0",
    "@pawel-up/semver": "^0.1.4",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "c8": "^10.1.3",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.0",
    "ts-node-maintained": "^10.9.5",
    "tslib": "^2.7.0",
    "typescript": "^5.6.0",
    "wireit": "^0.14.0"
  },
  "contributors": [
    {
      "name": "Rune Mehlsen",
      "url": "https://twitter.com/runemehlsen",
      "img": "https://avatars2.githubusercontent.com/u/5372940?s=460&v=4"
    },
    {
      "name": "Andreas Mehlsen",
      "url": "https://twitter.com/andreasmehlsen",
      "img": "https://avatars1.githubusercontent.com/u/6267397?s=460&v=4"
    },
    {
      "name": "Pawel Uchida-Psztyc",
      "url": "https://www.linkedin.com/in/pawelpsztyc",
      "img": "https://avatars.githubusercontent.com/u/3320020?v=4&size=460"
    },
    {
      "name": "You?",
      "img": "https://joeschmoe.io/api/v1/random",
      "url": "https://github.com/runem/lit-analyzer/blob/master/CONTRIBUTING.md"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
